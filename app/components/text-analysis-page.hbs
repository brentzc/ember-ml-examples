<div class="mx-4 space-x-4 bg-white" {{did-insert this.tensorflow.initializeTextSentimentModel}}>
    <div class="px-8 py-8">
        {{#if this.score}}
            <Text-Sentiment-Score @score={{this.score}} />
        {{/if}}
        <label for="about" class="block text-blue-700 text-sm font-display mb-2 pt-8">
            Enter some text to analyze
        </label>
        <Textarea
            class="text-input appearance-none bg-gray-200 font-body text-gray-700 border border-gray-200 w-full py-3 px-4 focus:outline-none focus:bg-white rounded-l"
            @id="text-input"
            @value={{this.user_input}}
            @rows="3"
            @placeholder="lorem ipsum dolor sit amet"
        />

        <button
            type="button"
            role="button"
            class="flex items-center mx-auto my-4 px-4 py-2 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:border-indigo-700 active:bg-indigo-700 transition ease-in-out duration-150"
            {{on "click" this.analyze}}
        >
            Analyze Sentiment
        </button>

        {{#if this.error}}
            <div>{{this.error}}</div>
        {{/if}}
    </div>
</div>