<div role="button" class="px-6 py-4 whitespace-nowrap hover:bg-indigo-100 border-2 border-white hover:border-indigo-600 my-2" {{on "click" this.click}}>
    <div class="flex items-center">
        <div class="flex-shrink-0 h-10 w-10">
            <img id={{@image.title}} class="h-10 w-10 rounded-full" src={{@image.path}} alt={{@image.title}} {{create-ref 'img'}}>
        </div>
        <div class="ml-4">
            <div class="text-md font-display text-gray-900">{{@image.title}}</div>
            <div class="text-sm text-gray-500">{{@image.description}}</div>
        </div>
    </div>
</div>